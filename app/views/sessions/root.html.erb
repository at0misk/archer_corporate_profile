<style type="text/css">
	.main_col{
		text-align: center;
		margin-top: 10%;
	}
	.bottom_col{
		text-align: center;
	}
	.main_col h2{
		display: inline-block;
	    margin: 0px;
	    margin-left: 15px;
	    vertical-align: -webkit-baseline-middle;
	}
	.btn-col{
		text-align: center;
	}
	.pw-col{
		text-align: center;
	}
	.form-row{
		margin-top: 30px;
	}
	.close{
	    position: absolute;
	    top: 0px;
	    right: 2px;
	}
	.red{
		color: red;
	}
	.green{
		color: green;
	}
  .modal-title{
    text-align: center;
  }
</style>
<div class="container">
	<div class="row">
		<div class="col-sm-12 main_col">
			<%= image_tag('corporate_logo', :class => 'logo') %><h2 class="main_header">Archer Travel Corporate Profile</h2>
      <h4 class="bottom_header">If you created a profile but never recieved a password, click <a href="#" data-toggle="modal" data-target="#myModal">here</a> for a temporary one.</h4>
			<h4>Click <a href="/users/new">here</a> to create a profile, or login below</h4>
		</div>
	</div>
	<div class="row form-row">
		<div class="col-sm-3">
		</div>
		<div class="col-sm-6">
		<form action="/sessions" method="post" class="form-horizontal" id="login-form">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <div class="row form-row-login">
        <div class="form-group">
            <label for="email-login" class="col-sm-2 control-label"></label>
            <div class="col-sm-8">
                <input placeholder="Email" name="email" type="text" class="form-control" id="email-login" required/>
            </div>
        </div>
      </div>
      <div class="row form-row-login">
        <div class="form-group">
            <label for="password-login" class="col-sm-2 control-label"></label>
            <div class="col-sm-8 pw-col">
                <input placeholder="Password" name="password" type="password" class="form-control" id="password-login" required/>
                <small class="forgot-small"><a href="#" data-toggle="modal" data-target="#myModal">Forgot Password?</a></small>
            </div>
        </div>
      </div>
      <div class="row form-row-login">
        <div class="form-group">
            <label for="login-submit" class="col-sm-3 control-label"></label>
            <div class="col-sm-6 btn-col btn-col-login">
                <button class="btn btn-primary" id="login-submit">Login</button>
            </div>
        </div>
      </div>
      </form>
		</div>
		<div class="col-sm-3">
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12 bottom_col">
			<% if flash[:login_errors] %>
				<h5 class="red"><%= flash[:login_errors] %></h5>
			<% end %>
      <% if flash[:success] %>
        <h5 class="green"><%= flash[:success] %></h5>
      <% end %>
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Enter your email to be sent a temporary password</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/recover" method="post" class="form-horizontal" id="login-form">
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <div class="row form-row-login">
          <div class="form-group">
              <label for="email" class="col-sm-3 control-label">Email</label>
              <div class="col-sm-6">
                  <input name="email" type="text" class="form-control" id="email-login" required/>
              </div>
          </div>
        </div>
        <div class="row form-row-login">
          <div class="form-group">
              <label for="submit" class="col-sm-3 control-label"></label>
              <div class="col-sm-6 btn-col btn-col-login">
                  <button class="btn btn-primary">Submit</button>
              </div>
          </div>
        </div>
        </form>
      </div>
<!--       <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div> -->
    </div>
  </div>
</div>